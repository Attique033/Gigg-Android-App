<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="#FDF6EC"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".Activity.freelance.ui.CreativeProfileSettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.MainActivity">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:onClick="goBack"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:onClick="skip"
                android:fontFamily="@font/rubik"
                android:text="skip"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>



        </LinearLayout>


        <TextView
            android:textColor="#9C9C9C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans_light"
            android:gravity="center"
            android:text="Creative Profile"
            android:textSize="21sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans_light"
            android:gravity="left"
            android:paddingLeft="45dp"
            android:paddingTop="10dp"
            android:text="Tell us about you"
            android:textColor="#456268"
            android:textSize="21sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans_light"
            android:gravity="left"
            android:paddingLeft="45dp"
            android:paddingTop="10dp"
            android:text="Please share a bit more about your professioal self so we can personalize your hiring process"
            android:textColor="#456268"
            android:textSize="12sp" />

        <androidx.cardview.widget.CardView
            android:layout_margin="30dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12sp"
                        android:textColor="#8F8F8F"
                        android:fontFamily="@font/merriweather"
                        android:text="User Name :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/editText_username"
                        android:digits="qwertyuiopasdfghjklzxcvbnm QWERTYUIOPASDFGHJKLZXCVBNM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12sp"
                        android:textColor="#8F8F8F"
                        android:fontFamily="@font/merriweather"
                        android:text="Occupation :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/editText_occupation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:textSize="12sp"
                        android:textColor="#8F8F8F"
                        android:fontFamily="@font/merriweather"
                        android:text="School :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <AutoCompleteTextView
                        android:id="@+id/university"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12sp"
                        android:textColor="#8F8F8F"
                        android:fontFamily="@font/merriweather"
                        android:text="Date Of Birth :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:onClick="opnDatePicker"
                        android:focusable="false"
                        android:textColor="#979797"
                        android:textSize="12sp"
                        android:text="select date of birth"
                        android:inputType="text"
                        android:id="@+id/dob_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12sp"
                        android:textColor="#8F8F8F"
                        android:fontFamily="@font/merriweather"
                        android:text="About Me :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:paddingLeft="5dp"
                        android:gravity="left"
                        android:textColor="#8F8F8F"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/about_me_background"
                        android:inputType="textMultiLine"
                        android:id="@+id/editText_aboutme"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/selection_text"
                        android:textSize="12sp"
                        android:paddingBottom="5dp"
                        android:textColor="#808080"
                        android:fontFamily="@font/merriweather"
                        android:text="Capability : Select 5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Spinner
                        style="@style/SpinnerAsEditText"
                        android:id="@+id/capability_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/capability_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                        app:spanCount="2"
                        tools:itemCount="1"
                        tools:listitem="@layout/capability_item" />


                </LinearLayout>


                <include
                    layout="@layout/social_headers_2"/>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:ignore="NotSibling" />


                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    app:cardElevation="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#456268"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_gravity="center"
                            android:id="@+id/register_button"
                            android:background="#456268"
                            android:fontFamily="@font/merriweather"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:text="submit"
                            android:onClick="submit"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/api_name_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/register_button"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/red"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/api_email_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/api_name_error"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/red"
                    android:visibility="gone" />



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>