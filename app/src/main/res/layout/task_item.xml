<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="@dimen/keyline_1_minus_8dp"
    android:background="@color/white"
    android:padding="@dimen/keyline_1_minus_8dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:id="@+id/task_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/keyline_1_minus_8dp">

        <ImageView
            android:id="@+id/task_imaeView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/app_task" />

        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/keyline_1_minus_8dp"
            android:text="App Task"
            android:textAlignment="center"
            android:textAppearance="@style/micro_item_text"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>